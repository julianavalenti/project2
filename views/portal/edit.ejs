<body>
    <h1>Personal information</h1>

    <form action="/sessions/edit?_method=PUT" method="POST">
      
        Name <input type="text" name="name" value="<%=currentUser.name%>" /><br />
        Phone: <input type="number" name="phone" value="<%=currentUser.phone%>" /><br />
        Email: <input type="text" name="email" value="<%=currentUser.email%>" /><br />
        
        
        <br />
        <input type="submit" value="Submit Changes" />
      </form>
   
    <form action="/sessions/password?_method=PUT" method="POST">
        New Password: <input type="password" name="newPassword" /><br />
        
        <br />
        <input type="submit" value="Submit New password" />
    </form>
</body>
